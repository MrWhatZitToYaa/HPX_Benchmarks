#!/usr/bin/env bash
#SBATCH --job-name=partitioned_vector_hpx
#SBATCH -p qdr
#SBATCH -N 8
###SBATCH --exclusive

spack load hpx
mpirun hostname
##--hpx:threads 2
mpirun ./../build/main --hpx:ignore-batch-env --maxelems 32768
mpirun ./../build/main --hpx:ignore-batch-env --maxelems 65536
